{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "lib": [
        "dom",
        "esnext"
      ],
      "declaration": true,
      "declarationMap": true,
      "noEmit": true,
      "jsx": "react",
      "strict": true,
      "pretty": true,
      "sourceMap": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "@utils/*": [
          "app/utils/*"
        ],
        "@components/*": [
          "app/components/*"
        ],
        "@store/*": [
          "app/store/*"
        ],
        "@modals/*": [
          "app/modals/*"
        ],
        "@models/*": [
          "app/models/*"
        ],
        "@models": [
          "app/models"
        ],
        "@crypto/*": [
          "app/crypto/*"
        ],
        "@hooks/*": [
          "app/hooks/*"
        ],
        "@api/*": [
          "app/api/*"
        ],
        "@assets/*": [
          "app/assets/*"
        ],
        "@constants/*": [
          "app/constants/*"
        ]
      }
    },
    "exclude": [
      "test",
      "release",
      "app/main.prod.js",
      "app/main.prod.js.map",
      "app/renderer.prod.js",
      "app/renderer.prod.js.map",
      "app/style.css",
      "app/style.css.map",
      "app/dist",
      "dll",
      "app/main.js",
      "app/main.js.map",
      "node_modules/**",
      "app/node_modules/**",
      "app/tests/**/*.spec.ts",
      "app/tests/**/*.feature.ts",
      "**/*.spec.ts"
    ],
    "typeRoots": [
      "./node_modules"
    ]
  }